<html lang="en">


<%- include('layouts/header'); -%>

    <body>

        <div id="container">

            <div class="banner" style="background-image: url('/images/FrontBanner.jpeg');">
                <!-- navigation -->
                <%- include('layouts/navbar'); -%>
                    <h1 class="bannerText">I have no special talents. I am only PASSIONATELY CURIOUS.</h1>
                    <p class="author"><i>Albert Einstain</i></p>
            </div>


