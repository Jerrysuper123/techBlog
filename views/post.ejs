<html lang="en">

<%- include('layouts/header'); -%>

    <body>

        <div id="containerLogin">

            <div class="banner bannerHeightLogin">
                <!-- navigation -->
                <%- include('layouts/navbar'); -%>

            </div>

            <!-- articles -->
            <div class="pageContentBlog">
